{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    // 📝 Code Style avec Prettier
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "endOfLine": "auto"
      }
    ],
    
    // 🔧 General Rules
    "no-console": "off",
    "no-debugger": "error",
    "no-duplicate-imports": "error",
    "prefer-const": "error",
    "no-var": "error",
    
    // ⚛️ React Rules
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-key": "error",
    "react/jsx-no-duplicate-props": "error",
    
    // ♿ Accessibility Rules
    "jsx-a11y/anchor-is-valid": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  }
}